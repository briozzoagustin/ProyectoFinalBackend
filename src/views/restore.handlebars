<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6 border border-dark p-4">
			<form
				id="restore-form"
				class="restore-form"
				action="/api/restore-password"
				method="POST"
			>
				<h2 class="mb-4">Recuperar Contraseña</h2>
				<div class="form-group">
					<label for="email">Correo Electrónico:</label>
					<input
						type="email"
						class="form-control"
						id="email"
						name="email"
						required
					/>
				</div>
				<button
					class="btn btn-primary btn-block mt-2"
					id="forgot"
					type="submit"
				>Enviar Correo de Recuperación</button>
			</form>
		</div>
	</div>
</div>
<script src="/js/restore.js"></script>