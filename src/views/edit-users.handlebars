<div class="container mt-4">
	<div class="row mb-4">
		<div class="col">
			<a class="btn btn-light" href="/api/products">
				Inicio
			</a>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<h2>Eliminar Usuarios</h2>
			<ul class="list-group">
				{{#each users}}
					<li
						class="list-group-item d-flex justify-content-between align-items-center"
					>
						<div>
							<span class="fw-bold">{{first_name}}
								{{last_name}}</span><br />
							<span class="text-muted">Email: {{email}}</span><br
							/>
							<span class="badge bg-primary">{{role}}</span>
							<span class="badge bg-primary">{{_id}}</span>
						</div>
						<button
							type="button"
							class="btn btn-danger btn-sm button-delete-user"
							id="{{_id}}"
						>Eliminar</button>
					</li>
				{{/each}}
			</ul>
		</div>

		<div class="col-md-6">
			<h2>Actualizar Rol de Usuario</h2>
			<form id="update-role-user-form" method="POST">
				<div class="mb-3">
					<label for="userEmail" class="form-label">Correo Electr√≥nico
						del Usuario:</label>
					<input
						type="email"
						class="form-control"
						name="userEmail"
						id="userEmail"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="newRole" class="form-label">Nuevo Rol:</label>
					<select class="form-select" name="newRole" id="newRole">
						<option value="user">User</option>
						<option value="premium">Premium</option>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Actualizar Rol</button>
			</form>

			<div class="mt-4">
				<a class="btn btn-primary" href="/api/users">Ir a mostrar todos
					los usuarios</a>
			</div>
		</div>
	</div>
</div>

<script src="/js/edit-user.js"></script>