<div class="container mt-5">
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <a class="btn btn-light" href="/api/products">Volver</a>
                </div>
            </nav>
        </div>
    </div>
    <h1>Carrito de Compras</h1>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    {{#each cart.products}}
                        <ul class="list-group mt-3">
                            <li class="list-group-item">
                                <h5 class="card-subtitle mb-2 text-muted">Id del producto: {{this._id}}</h5>
                                <p class="card-text">Nombre: {{this.name}}</p>
                                <p class="card-text">Precio: {{this.price}}</p>
                                <p class="card-text">
                                    Cantidad: <span class="product-quantity" id="{{this.quantity}}">{{this.quantity}}</span>
                                </p>
                                <!-- Botones para aumentar y disminuir cantidad -->
                                <div class="btn-group" role="group" aria-label="Botones de cantidad">
                                    <button type="button" class="btn btn-outline-secondary button-decrease-quantity" id="{{this._id}}" data-cart-id="{{../cart._id}}">-</button>
                                    <button type="button" class="btn btn-outline-secondary button-increase-quantity" id="{{this._id}}" data-cart-id="{{../cart._id}}">+</button>
                                </div>
                                <!-- Botón para eliminar un producto del carrito -->
                                <button type="button" class="btn btn-outline-secondary btn-block button-remove-product" id="{{this._id}}" data-cart-id="{{../cart._id}}">Eliminar Producto</button>
                            </li>
                        </ul>
                    {{/each}}
                    <!-- Total del carrito -->
                    <h2 class="card-title mt-3">Total {{cart.total}}</h2>
                    <!-- Botón para finalizar proceso de compra -->
                    {{#unless isEmptyCart}}
                    <button type="button" class="btn btn-secondary btn-block button-finish-purchase mt-3 mb-3" id="{{cart._id}}">Finalizar proceso de compra</button>
                    {{/unless}}                    
                    <!-- Botón para vaciar todo el carrito -->
                    {{#unless isEmptyCart}}
                    <button type="button" class="btn btn-outline-danger btn-block button-empty-cart" id="{{cart._id}}">Vaciar Carrito</button>
                    {{/unless}}
                    {{#if isEmptyCart}}
                    <p class="mt-3">Este carrito está vacío</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/purchase.js"></script>
<script src="/js/cart.js"></script>